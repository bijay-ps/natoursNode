mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src=`/img/users/default.jpg`, alt=`default photo`)
      h6.reviews__user= 'user name'
    p.reviews__text= 'lorem ipsum'
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${(Math.random()*6) >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')